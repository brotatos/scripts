#!/bin/bash -x

tmpdir=$(mktemp -d)

for i in *.tex; do
    if [[ -f *.bib ]]; then
        cp -t "$tmpdir" *.bib;
        cd "$tmpdir";
        latex -output-directory="$tmpdir" "$i";
        bibtex "${i%.tex}.aux";
        latex "$i";
        latex "$i";
        dvipdfm "${i%.tex}.pdf";
        zathura "${i%tex.}.pdf";
    else
        [[ -f "$i" ]] || continue
        latex -output-directory="$tmpdir" "$i";
        dvipdfm -o "$tmpdir/${i%.tex}.pdf" "$tmpdir/${i%.tex}.dvi";
        zathura "$tmpdir/${i%.tex}.pdf";
    fi
done;

rm -rf "$tmpdir";
